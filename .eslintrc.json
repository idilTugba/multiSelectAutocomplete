{
  "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:prettier/recommended"
  ],
  "plugins": [
      "react",
      "import",
      "jsx-a11y",
      "prettier"
  ],
  "rules": {
    "ignorePatterns": ["webpack.config.js", "**/config/*.js"],
      "prettier/prettier": ["error"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}